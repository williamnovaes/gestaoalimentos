<?xml version="1.0" encoding="UTF-8"?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_0.xsd"
	version="2.0">

	<lifecycle>
   		<phase-listener>br.com.nx.tickets.phase.AutorizacaoListener</phase-listener>
	</lifecycle>

	<application>

		<locale-config>
			<default-locale>pt_BR</default-locale>
			<supported-locale>pt_BR</supported-locale>
			<supported-locale>en_US</supported-locale>
		</locale-config>

		<resource-bundle>
			<base-name>br.com.nx.tickets.internationalization.messages</base-name>
			<var>msg</var>
		</resource-bundle>

	  <message-bundle>
	  	br.com.nx.tickets.internationalization.messages_pt_BR
	  </message-bundle>
	</application>

</faces-config>